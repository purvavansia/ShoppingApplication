<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"

    >


    <TextView
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textColor="@color/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_an_account" />
    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/editTextSignupName"
        android:layout_width="300dp"
        android:paddingLeft="5dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="#ecebeb"
        android:textSize="20dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:text="" />
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/editTextSignupLastName"
        android:layout_width="300dp"
        android:paddingLeft="5dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="#ecebeb"
        android:textSize="20dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:text="" />
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/editTextSignupAddr"
        android:layout_width="300dp"
        android:paddingLeft="5dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="#ecebeb"
        android:textSize="20dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textEmailAddress"
        android:text="" />
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/editTextSignupEmail"
        android:layout_width="300dp"
        android:paddingLeft="5dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="#ecebeb"
        android:textSize="20dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:text="" />
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/editTextSignupPhone"
        android:layout_width="300dp"
        android:paddingLeft="5dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="#ecebeb"
        android:textSize="20dp"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        android:text="" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/editTextSignupPass"
        android:layout_width="300dp"
        android:paddingLeft="5dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="#ecebeb"
        android:textSize="20dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:text="" />
    <TextView
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/agreement"
        android:layout_width="300dp"
        android:textColor="@color/text"
        android:layout_height="wrap_content" />

    <Button
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/buttonSignup"
        android:background="@drawable/button_layout"
        android:layout_width="300dp"
        android:textColor="#fff"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_up" />

    <Button
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:id="@+id/buttonAlrdyAcc"
        android:textSize="15dp"
        android:background="@drawable/button_layout_simple"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/already_have_an_account" />






</LinearLayout>