<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llHolder"
    android:orientation="vertical"
    tools:context="com.example.purva.shoppingapplication.activity.CheckOutActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <LinearLayout
                android:background="@color/app_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="130dp"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:textSize="25dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:background="@drawable/amazon"
                    android:layout_marginTop="10dp"
                    android:inputType="textPersonName"
                    android:text="" />


            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/recyclerViewCheckOut"
        android:layout_width="match_parent"
        android:layout_height="290dp" />

    <TextView
        android:textSize="20dp"
        android:textColor="@color/text"
        android:id="@+id/textViewTotal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonbillingDetails"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/button_layout_simple"
        android:layout_width="300dp"
        android:textSize="15dp"
        android:textColor="@color/text"
        android:layout_height="wrap_content"
        android:text="@string/billing_details" />
    <!--<CheckBox
        android:id="@+id/checkBoxBillingDetails"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:text="Billing Details Provided"
        android:textColor="@color/text"
        android:layout_height="wrap_content" />-->
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/payment_agreement"
        android:textColor="@color/text"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:textSize="25dp"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:background="@drawable/button_layout_simple"
            android:id="@+id/textViewPaypal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="CheckOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>
